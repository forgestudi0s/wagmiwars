# WagmiWars Backend Configuration
# Copy this file to .env and modify the values

# Application
APP_NAME=WagmiWars
DEBUG=true
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://wagmi:wagmi123@localhost/wagmiwars_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Web3/Crypto (Optional - for production features)
INFURA_PROJECT_ID=your-infura-project-id
ALCHEMY_API_KEY=your-alchemy-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key

# Exchange APIs (Optional - for real market data)
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET=your-binance-secret
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET=your-coinbase-secret

# Simulation
SIMULATION_TICK_INTERVAL=0.1
MAX_SIMULATION_TICKS=10000
DEFAULT_INITIAL_BALANCE=10000.0

# Execution Powers
EXECUTION_POWER_ENABLED=false
MAX_POSITION_SIZE=1000.0
MAX_DAILY_LOSS=100.0

# Payment Systems
PAYMENT_ENABLED=true
PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]